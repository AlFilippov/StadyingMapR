<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/content_text_view_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/content_text_view_request"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/content_edit_text_request"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/content_text_view_request"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:importantForAutofill="no" />
    <Button
        android:id="@+id/content_button_request"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_edit_text_request"
        android:layout_centerHorizontal="true"
        android:text="@string/content_button_request" />
</RelativeLayout>