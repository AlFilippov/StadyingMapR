<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/first"
        android:orientation="horizontal">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_fragment_price_paid"
            app:useMaterialThemeColors="false" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_fragment_price_free"
            app:useMaterialThemeColors="false" />

    </RadioGroup>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/filter_language_en"
        android:orientation="horizontal">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/filter_language_ru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_fragment_language_ru"
            app:useMaterialThemeColors="false" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/filter_language_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_fragment_language_en"
            app:useMaterialThemeColors="false" />
    </RadioGroup>

        <com.google.android.material.slider.Slider
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:stepSize="0.5"
            android:value="4"
            android:valueFrom="0"
            android:valueTo="5" />

</LinearLayout>